/*		===== Boolean functions
							andB								:: Bool -> Bool -> Bool
							orB									:: Bool -> Bool -> Bool
							not									:: Bool -> Bool
							otherwise							:: Bool
							
							TYPE : Bool                         :: true, false
*/

function andB (@x) { return 
function      (@y) { return 
							x && y
; }; }

function orB (@x) { return 
function     (@y) { return 
							x || y
; }; }

function not (@x) { return 
							! x
; }

global otherwise = true;







